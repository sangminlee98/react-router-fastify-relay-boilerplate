{
  "name": "@fastify-ssr/app",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "node ./esbuild.config.js && react-router build",
    "start": "NODE_ENV=production node --loader=extensionless ./dist/index.js"
  },
  "nodemonConfig": {
    "watch": "src",
    "ignore": [
      "dist/**",
      "node_modules/**",
      "src/web/**"
    ],
    "ext": "ts,tsx",
    "exec": "rm -rf ./dist && yarn node ./esbuild.config.js && node --loader=extensionless ./dist/index.js | yarn pino-pretty --singleLine"
  },
  "dependencies": {
    "@fastify/autoload": "^6.1.0",
    "@fastify/cors": "^10.0.2",
    "@fastify/env": "^5.0.2",
    "@mcansh/remix-fastify": "^4.0.5",
    "@react-router/node": "^7.1.5",
    "@sinclair/typebox": "^0.34.15",
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "extensionless": "^1.9.9",
    "fastify": "^5.2.1",
    "fastify-graceful-shutdown": "^4.0.1",
    "fastify-plugin": "^5.0.1",
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.12.0",
    "isbot": "^5.1.22",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.5"
  },
  "devDependencies": {
    "@react-router/dev": "^7.1.5",
    "@types/node": "20",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "esbuild": "^0.24.2",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  }
}
